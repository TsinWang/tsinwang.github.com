    </PreferenceCategory> -->
    <PreferenceCategory android:title="@string/feedback">
        <CheckBoxPreference android:title="@string/feedback_preference_title" android:key="feedback" android:summary="@string/feedback_preference_summary" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/sound_feedback_preference_title" android:key="sound feedback" android:summary="@string/sound_feedback_preference_summary" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/sensor_testing">
    <PreferenceScreen android:title="@string/sensor_testing_title" android:key="testing" android:summary="@string/sensor_testing_summary" />
